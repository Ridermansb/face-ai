rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

  # allow read, write: if
  #           request.time < timestamp.date(2020, 7, 13);

     function isSignedIn() {
       return request.auth.uid != null;
     }

    match /users/{userId} {
     allow read,update,delete: if request.auth.uid == userId;
     allow create: if isSignedIn();
    }
  }
}

